<%= form_for(User.new, class: "form-group") do |f| %>
  <div class="form-inline">
    <div class="col-sm-12 form-group center"></br>
      <label for="name" class="control-label">name                    </label>
      <%= f.text_field(:name, { placeholder: "john smith", id: "name" })  %>
    </div>
  </div>
  <div class="form-inline">
    <div class="col-sm-12 form-group"></br>
      <label for="password">password              </label>
      <%= f.password_field(:password, { id: "password", type: "password" })  %>
    </div>
  </div>
  <div class="form-inline">
    <div class="col-sm-12 form-group"></br>
      <label for="password_confirmation">confirm password</label>
      <%= f.password_field(:password_confirmation, { id: "password_confirmation", type: "password" })  %>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12 black center"></br>
      <%= submit_tag "submit", class: "btn btn-default" %>
    </div>
  </div>
<% end %>
