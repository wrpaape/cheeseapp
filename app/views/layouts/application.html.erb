          <% flash.each do |name, msg| %>
            <%= content_tag(:div, msg, { class: "flash #{name}", id: "notice" }) %>
          <% end %>
        <% end %>
      </div>
<!--       <div class="col-sm-3">
        <div id="notice" class="notice"><%= notice %></div>
      </div> -->
    </div>
    <div class="row">
